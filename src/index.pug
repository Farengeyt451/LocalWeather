doctype html
html
	head
		title Local Weather
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="author" content="Alexander Kislov")
		meta(name="copyright" content="Alexander Kislov")
		meta(name="description" content="Showing weather for your current region using geolocation and openweathermap API")
		meta(name="keywords" content="local weather, weather")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="shortcut icon" href="img/weather.ico" type="image/x-icon")
		link(rel="stylesheet" type="text/css" href="css/main.css")
	body
		.contacts
			a(href="https://github.com/Farengeyt451" target="_self")
				.icon.icon-github
			a(href="https://alexander-kislov.github.io/" target="_self")
				.icon.icon-portfolio
		.main-wrapper
			.city-name
				a#linkToMap(href="")
					h1#city-name
				span#country
			.main-weather
				.icon-humidity
					.main-humidity
						span Humidity
						span#humidity
				.icon-temp#convertTemp
					.main-temp
						span Temperature
						span#temp
				.line-break-960
				.icon-weather
					span#desc
					.border
					img#icon-img(src="")
				.line-break
				.icon-pressure#convertPressure
					.main-pressure
						span Pressure
						span#pressure
						span#pressureUnits
				.icon-wind#convertWind
					.main-wind
						span Wind Speed
						span#wind
						span#windUnits
			.search-form
				form#formSubmit(name="log-in-form")
					input#input-city(type = "text" name = "input-city" placeholder = "London, UK" required)
					button(type ="submit")#searchCity Search
		script(src="js/jquery.min.js")
		script(src="js/main.js")
